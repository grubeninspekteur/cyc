#!/bin/sh

USER="cyc-engine" 
DAEMON="/usr/bin/java"
ROOT_DIR="/usr/local/cyc-engine-container/"
SERVER_OPTS="-Xmx256M -XX:MaxPermSize=256M -Dcyc.properties=/etc/cyc.properties -Djava.security.policy=/etc/cyc-security.policy -Dcyc.home=. -jar " 
SERVER="engine-container-jar-with-dependencies.jar"
LOG_FILE="/var/log/cyc-engine.log"
 
do_start()
{
        if ps -efH | grep -i java.*$SERVER | grep -v "grep" -q ; then
                echo "$SERVER is locked."        
                RETVAL=1
        fi                        

        if [ -z "$RETVAL" ] ; then
                echo -n "Starting $SERVER: "
                cd $ROOT_DIR
                echo sudo -b -u $USER $ROOT_DIR/run.sh
                sudo -b -u $USER $ROOT_DIR/run.sh >> $LOG_FILE
                RETVAL=$?
                echo                
        fi

}
do_stop()
{
        echo -n $"Shutdown $SERVER: "
        echo "exit" | nc localhost 9998
        if [ $? != 0 ]; then        
                echo -n "Killing $SERVER: "
                pid=`ps -aefw | grep "$SERVER" | grep -v " grep " | awk '{print $2}'`
                kill -9 $pid > /dev/null 2>&1
                RETVAL=$?        
                [ $RETVAL -eq 0 ]
        fi

        echo
}
 
case "$1" in
        start)
                do_start
                ;;
        stop)
                do_stop
                ;;
        restart)
                do_stop
                sleep 2
                RETVAL=
                do_start
                ;;
        *)
                echo "Usage: $0 {start|stop|restart}"
                RETVAL=1
esac
 
exit $RETVAL
